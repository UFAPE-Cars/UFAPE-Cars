<p style="color: green"><%= notice %></p>
<%= link_to 'Home', root_path %>

<% if notice %>
  <p style="color: yellow"><%= notice %></p>
<% end %>

<h1>Vendedores</h1>

<%= form_with(url: buscar_vendedors_path, method: :get, local: true) do |form| %>
  <div class="field">
    <%= form.label :q, "Buscar por Nome ou CPF:" %>
    <%= form.text_field :q %>
  </div>
  <div class="actions">
    <%= form.submit "Buscar" %>
  </div>
<% end %>

<div id="vendedors">
  <% if @vendedors.present? %>
    <% @vendedors.each do |vendedor| %>
      <div>
        <p><%= vendedor.nome %> - <%= vendedor.cpf %></p>
        <p>
          <%= link_to "Show this vendedor", vendedor %>
          <%= link_to 'Ver HistÃ³rico de Vendas', vendedor_vendas_path(vendedor_id: vendedor.id) %>
        </p>
      </div>
    <% end %>
  <% else %>
    <div style="margin-top: 50px">
        <p>Nenhum vendedor encontrado</p>
    </div>
  <% end %>
</div>

<%= link_to "New vendedor", new_vendedor_path %>
